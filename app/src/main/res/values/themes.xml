<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JCCL_Network_Project" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- creer le composant pour les champs de texte -->
    <style name="placeholder">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Creer le composant pour le texte des boutton -->
    <style name="button_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <!-- Creer le composant pour les grands titre  -->
    <style name="title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="title_doc">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="medium_description">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Creer le composant pour les sous-titres -->
    <style name="subtitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Creer le composant pour les textes gris -->
    <style name="text_gray">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Creer le composant pour les petits textes gris -->
    <style name="subtext_gray">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Creer le composant pour les petits textes gris -->
    <style name="appbar_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

</resources>