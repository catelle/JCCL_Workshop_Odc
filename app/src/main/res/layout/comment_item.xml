<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp">

    <!--- poste comment picture -->
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/image_comment_poster"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:src="@mipmap/img_user_picture"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--- Date de commentaire -->
            <TextView
                android:id="@+id/text_comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/comment_date"
                style="@style/text_gray"/>

            <!--- note -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_full_star"
                    app:tint="#FFCE31" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_full_star"
                    app:tint="@color/yellow" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_full_star"
                    app:tint="@color/yellow" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_half_star"
                    app:tint="@color/yellow" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_empty_star"
                    app:tint="@color/gray" />
            </LinearLayout>


        </LinearLayout>


        <!-- contenu du commentaire -->
        <TextView
            android:id="@+id/text_comment"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ttres beau document je recommande , tres instructif"
            style="@style/subtitle"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_gray"/>

    </LinearLayout>


</LinearLayout>