<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:background="@color/dark_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/img_cours"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_height="180dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleX="2.3"
                    android:src="@mipmap/ic_office_work" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/text_cours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_cours"
                android:fontFamily="@font/poppins_regular"
                android:text="Developpement personnelle"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/icon_meeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_cours"
                android:layout_marginStart="25dp"
                app:srcCompat="@drawable/ic_baseline_people_outline_24"
                app:tint="#A2008000" />

            <TextView
                android:id="@+id/text_meeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_meeting"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:text="Meeting"/>

            <ImageView
                android:id="@+id/icon_certification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_cours"
                android:layout_marginStart="45dp"
                android:layout_toEndOf="@+id/icon_meeting"
                app:srcCompat="@drawable/ic_baseline_cast_for_education_24"
                app:tint="#A20A75D8" />
            <TextView
                android:id="@+id/text_certification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_meeting"
                android:layout_toEndOf="@+id/icon_meeting"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:text="Certification"/>

            <ImageView
                android:id="@+id/icon_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_cours"
                android:layout_marginStart="50dp"
                app:tint="#A2582900"
                android:layout_toEndOf="@+id/icon_certification"
                app:srcCompat="@drawable/ic_baseline_card_travel_24" />

            <TextView
                android:id="@+id/text_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon_work"
                android:layout_toEndOf="@+id/text_certification"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:text="Work"/>

            <ImageView
                android:id="@id/icon_projet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_cours"
                android:layout_marginStart="40dp"
                app:tint="#A2FFFF00"
                android:layout_toEndOf="@+id/icon_work"
                app:srcCompat="@drawable/ic_baseline_emoji_objects_24" />
            <TextView
                android:id="@+id/text_projet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon_projet"
                android:layout_toEndOf="@+id/text_work"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:text="Projet"/>
            <TextView
                android:id="@+id/text_niveau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_regular"
                android:layout_below="@+id/text_meeting"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="Niveau :"/>
            <TextView
                android:id="@+id/niveau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/text_niveau"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_regular"
                android:layout_below="@+id/text_meeting"
                android:textColor="@color/orange"
                android:textSize="12sp"
                android:text="Intermediaire"/>

            <TextView
                android:id="@+id/text_peroide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/peroide"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/poppins_regular"
                android:layout_below="@+id/text_meeting"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="Peroide :"/>
            <TextView
                android:id="@+id/peroide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_regular"
                android:layout_below="@+id/text_meeting"
                android:textColor="#0F056B"
                android:textSize="12sp"
                android:text="Un mois"/>

        </RelativeLayout>

</androidx.cardview.widget.CardView>