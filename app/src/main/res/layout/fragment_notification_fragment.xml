<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notification_fragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:onClick="backToMainActivity"
                app:srcCompat="@drawable/ic_back" />

            <TextView
                android:id="@+id/text_appBarTitle"
                style="@style/appbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_weight="3"
                android:fontFamily="@font/poppins_regular"
                android:text="Notifications"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_search" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:id="@+id/cardView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:onClick="opendocument"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_profil"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/imgdocnotification" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Courtney Henry"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/skill"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Directeur HCIA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="  Modalité inscription HCIA..."
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ouvrirDetailFill"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="@+id/cardView7"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/probleme"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="4dp"
                android:layout_toStartOf="@+id/nb_comment"
                android:src="@drawable/ic_ant_design_message_outlined" />

            <TextView
                android:id="@+id/sujet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_probleme"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="HTML/CSS" />

            <TextView
                android:id="@+id/probleme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sujet"
                android:layout_marginLeft="10dp"
                android:ellipsize="middle"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="2"
                android:text="J'arrive pas à rendre ma page responsive, qu'elle propriété dois je utilisé"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/name_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/probleme"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/img_mini_profil"
                android:text="Markin McKenney" />

            <TextView
                android:id="@+id/date_posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/probleme"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/name_profil"
                android:layout_toStartOf="@+id/icon_comment"
                android:gravity="center"
                android:text="Il y'a 5 jours" />

            <TextView
                android:id="@+id/status_probleme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="5dp"
                android:text="Non resolu"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/nb_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/probleme"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:text="12" />

            <androidx.cardview.widget.CardView
                android:id="@+id/img_mini_profil"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_below="@+id/probleme"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/img_posted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_profil_tech" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        android:onClick="ouvrirDetailFil"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView9"
        tools:layout_editor_absoluteX="10dp">

        <RelativeLayout
            android:id="@+id/relativelayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon_comment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/probleme2"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="4dp"
                android:layout_toStartOf="@+id/nb_comment2"
                android:src="@drawable/ic_ant_design_message_outlined" />

            <TextView
                android:id="@+id/sujet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_probleme2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="HTML/CSS" />

            <TextView
                android:id="@+id/probleme2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sujet2"
                android:layout_marginLeft="10dp"
                android:ellipsize="middle"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="2"
                android:text="J'arrive pas à rendre ma page responsive, qu'elle propriété dois je utilisé"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/name_profil2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/probleme2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/img_mini_profil2"
                android:text="Markin McKenney" />

            <TextView
                android:id="@+id/date_posted2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/probleme2"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/name_profil2"
                android:layout_toStartOf="@+id/icon_comment2"
                android:gravity="center"
                android:text="Il y'a 5 jours" />

            <TextView
                android:id="@+id/status_probleme2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00A524"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="5dp"
                android:text="Resolus"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/nb_comment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/probleme2"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:text="12" />

            <androidx.cardview.widget.CardView
                android:id="@+id/img_mini_profil2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/probleme2"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/img_posted2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_profil_tech" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>