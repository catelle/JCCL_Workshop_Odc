<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePublicationActivity">

    <!-- Toolbar inscription -->

    <androidx.cardview.widget.CardView
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/lite_gray"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            style="@style/appbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:fontFamily="@font/poppins_regular"
            android:text="Creer une publication"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/icon_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/ic_baseline_clear_24" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="100dp"
                        android:layout_marginStart="20dp"
                        app:cardCornerRadius="8dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="64dp" />

                        <Spinner
                            android:id="@+id/categorie_pub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:layout_margin="24dp"
                            android:background="@color/dark_gray"
                            android:layout_weight="2"
                            android:ems="6"
                            android:fontFamily="@font/poppins_regular" />

                    </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginEnd="20dp">

                    <Spinner
                        android:id="@+id/domaine_pub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:background="@color/dark_gray"
                        android:layout_margin="24dp"
                        android:layout_weight="2"
                        android:ems="6"
                        android:fontFamily="@font/poppins_regular" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp">

                    <Spinner
                        android:id="@+id/niveau_scolaire_pub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:background="@color/dark_gray"
                        android:layout_margin="24dp"
                        android:layout_weight="2"
                        android:ems="6"
                        android:fontFamily="@font/poppins_regular" />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginEnd="20dp">

                    <Spinner
                        android:id="@+id/destinantion_pub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:background="@color/dark_gray"
                        android:layout_margin="24dp"
                        android:layout_weight="2"
                        android:ems="6"
                        android:fontFamily="@font/poppins_regular" />

                </androidx.cardview.widget.CardView>


                <!--   ***************   Full field inscription  ***********                -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="8dp">

                    <EditText
                        android:id="@+id/titre_publication"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/dark_gray"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Exemple: De la mediocriter a l'excellence"
                        android:inputType="textPersonName"
                        android:maxLines="3"
                        android:paddingStart="7dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="7dp"
                        android:paddingBottom="8dp"
                        android:textSize="15sp"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="8dp"
                        android:layout_marginStart="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/dark_gray"
                            android:orientation="vertical">
                            <EditText
                                android:id="@+id/editTextTextPersonName2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName"
                                android:paddingStart="7dp"
                                android:layout_gravity="top"
                                android:lines="4"
                                android:hint="une desciption du document....."
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="15sp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/sellcontent_button"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:onClick="sellcontentButton"
                            app:srcCompat="@drawable/dollaricon" />

                        <Button
                            android:id="@+id/choosefile_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="24dp"
                            android:layout_marginLeft="24dp"
                            android:background="@color/white"
                            android:text="choose file" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/uploadedImageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="24dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Ajouter des mots clés"
                        android:textColor="@color/orange" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="8dp">

                        <EditText
                            android:id="@+id/editTextPersonName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/dark_gray"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Exemple: physique, information"
                            android:inputType="textPersonName"
                            android:maxLines="3"
                            android:paddingStart="7dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="7dp"
                            android:paddingBottom="8dp"
                            android:textSize="15sp"/>

                    </androidx.cardview.widget.CardView>



                    <!--  ************   Staut d'utilisateur   *******************-->

                    <!--  ************   fin champ d'utilisateur   *******************-->

                    <!--  ************   Confirmation continuer l'inscription   *******************-->

                    <!--  ************   Autres moyens d'inscription   *******************-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/create_publication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="24dp"
                        android:text="Publier" />
                </LinearLayout>

                <!--  ************   Les inscriptions par google et facebook   *******************-->

                <!--  ************   Se connecter *******************-->

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>