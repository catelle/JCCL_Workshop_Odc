<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InscriptionActivity">

    <!-- Toolbar inscription -->

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_gray">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_toolbar"
                app:cardElevation="@dimen/card_elevation_value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/inscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_inscription"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal"
                    android:text="@string/name_inscription"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_inscription_bar" />

                <ImageView
                    android:id="@+id/icon_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/marginTop_icon_clear"
                    android:layout_marginEnd="@dimen/margin_end_iconclear"
                    android:contentDescription="@string/description_content_banner"
                    app:srcCompat="@drawable/ic_baseline_clear_24" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:contentDescription="@string/img_banner"
                    app:srcCompat="@drawable/img_connxion" />

                <TextView
                    android:id="@+id/requirement_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginLeft"
                    android:layout_marginTop="@dimen/marginTop_required_text"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/required"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_required" />


                <!--   ***************   Full field inscription  ***********                -->

                <!--  ************   Nom d'utilisateur   *******************-->

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/user_name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:background="@color/dark_gray"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/hint_name"
                      android:textSize="14sp"
                      android:paddingTop="10dp"
                      android:paddingBottom="15dp">

                      <com.google.android.material.textfield.TextInputEditText
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="15dp"
                          android:fontFamily="@font/poppins_regular" />
                    </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/dark_gray"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/hint_email">



                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:paddingTop="10dp"
                            android:paddingBottom="15dp"
                            android:fontFamily="@font/poppins_regular" />

                    </com.google.android.material.textfield.TextInputLayout>


                <!--  ************   Staut d'utilisateur   *******************-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginLeft"
                    android:layout_marginTop="@dimen/margin_end_iconclear"
                    android:layout_marginRight="@dimen/marginLeft"
                    app:cardElevation="@dimen/card_elevation_value">

            <!--  ************   Confirmation continuer l'inscription   *******************-->

                    <!--  ************   Nom d'utilisateur   *******************-->




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/dark_gray"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/user_status"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="end|center"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:layout_weight="2"
                            android:ems="6"
                            android:fontFamily="@font/poppins_regular" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <!--  ************   fin champ d'utilisateur   *******************-->

                <!--  ************   Confirmation continuer l'inscription   *******************-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginLeft"
                    android:layout_marginTop="@dimen/marginTop_cardView"
                    android:layout_marginRight="@dimen/marginLeft"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation_value">



                    <Button
                        android:id="@+id/suite_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enregistrer"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>


                </androidx.cardview.widget.CardView>

                <!--  ************   Autres moyens d'inscription   *******************-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="@dimen/layout_width_divider"
                        android:layout_height="@dimen/layout_width_divider"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_start_divider"
                        android:layout_marginEnd="@dimen/margin_end_divider"
                        android:layout_weight="2"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/text_to_choose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:paddingStart="0dp"
                        android:paddingEnd="1dp"
                        android:text="@string/other_way_signup" />

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="@dimen/margin_start_divider"
                        android:layout_weight="2"
                        android:background="@color/black" />
                </LinearLayout>

                <!--  ************   Les inscriptions par google et facebook   *******************-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--  ************   inscription par facebook  *******************-->

                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="30dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_facebook_button">

                            <ImageView
                                android:id="@+id/facebook_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_weight="1"
                                android:contentDescription="@string/facebook_image"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/facebook"
                                app:layout_constraintHorizontal_bias="0.96"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_baseline_facebook" />

                            <TextView
                                android:id="@+id/facebook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="start"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="@string/facebook"
                                android:textColor="#0A75D8"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <!--  ************   inscription par google  *******************-->

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_google_button">

                            <TextView
                                android:id="@+id/google"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="@string/google"
                                android:textColor="#E5180B"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/google_img"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/google"
                                app:layout_constraintHorizontal_bias="0.97"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_flat_google" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/se_connecter"
                        android:textColor="#E3871B"
                        android:textStyle="bold" />
                </LinearLayout>

                <!--  ************   Se connecter *******************-->

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>